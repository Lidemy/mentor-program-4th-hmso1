<!DOCTYPE html>
<html lang="en">
<head>
    <%- include('template/head')%>
    <style>
        img {
            width: 150px;
        }
        td {
            vertical-align: middle;
            text-align: center;
        }
        th {
            text-align: center;
        }
    </style>
</head>
<body>
    <%- include('template/navbar')%>
    <% if (errorMessage && errorMessage.length > 0 ) { %>
        <div class="alert alert-danger" role="alert">
          <%= errorMessage %>
        </div>
    <% } %>
    <div class="container">
        <table class="table">
            <thead>
              <tr>
                <th scope="col">#</th>
                <th scope="col">獎品名稱</th>
                <th scope="col">圖片預覽</th>
                <th scope="col">獎品權重</th>
                <th scope="col"></th>
              </tr>
            </thead>
            <tbody>
                <% prizes.forEach((prize, index) => { %>
                    <tr>
                        <td scope="row"><%= index+1 %></th>
                        <td><%= prize.name %></td>
                        <td><img src="<%= prize.url%>" class="rounded"></td>
                        <td><%= prize.weight %></td>
                        <td>
                            <a href="/edit/<%= prize.id%>" class="btn btn-outline-primary" >編輯</a>
                            <a href="/delete/<%= prize.id%>" class="btn btn-outline-danger" >刪除</a>
                        </td>
                      </tr>
                <% }) %>
            </tbody>
        </table>
    </div>
       
</body>
</html>